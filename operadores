#include <stdio.h>
#include <stdlib.h>
int n1,n2,soma,opcao;

int main(){
	printf("digite 1 para adicao \ndigite 2 para subtracao\ndigite 3 para multiplicacao\ndigite 4 para divisao\nopcao: ");
	scanf("%d",&opcao);
	switch(opcao){
		case 1:
			printf("valor 1: ");
			scanf("%d",&n1);
			printf("valor 2: ");
			scanf("%d",&n2);
			printf("%d + %d = %d",n1,n2,soma=n1+n2);
			break;
		case 2:
			printf("valor 1: ");
			scanf("%d",&n1);
			printf("valor 2: ");
			scanf("%d",&n2);
			printf("%d - %d = %d",n1,n2,soma=n1-n2);
			break;	
		case 3:
			printf("valor 1: ");
			scanf("%d",&n1);
			printf("valor 2: ");
			scanf("%d",&n2);
			printf("%d x %d = %d",n1,n2,soma=n1*n2);
			break;
		case 4:
			printf("valor 1: ");
			scanf("%d",&n1);
			printf("valor 2: ");
			scanf("%d",&n2);
			printf("%d / %d = %d",n1,n2,soma=n1/n2);
			break;	
	}
	
	
	return(0);
}
